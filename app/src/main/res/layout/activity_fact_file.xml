<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lakhvir.theawkwardeater.FactFileActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intolerances Info"
        android:id="@+id/factFileIntolerances"
        android:layout_centerHorizontal="true"
        android:layout_margin = "10dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergies Info"
        android:id="@+id/factFileAllergies"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/factFileIntolerances"
        android:background="@drawable/custom_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diets Info"
        android:id="@+id/factFileDiets"
        android:layout_margin="10dp"
        android:layout_below="@+id/factFileAllergies"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"/>

</RelativeLayout>
