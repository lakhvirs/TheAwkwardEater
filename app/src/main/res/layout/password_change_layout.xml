<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/EditText_Pwd1"
            android:layout_margin="10dp"
            android:layout_marginLeft="50dp"
            android:hint="Current password"
            android:inputType="textPassword" />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/EditText_Pwd2"
            android:hint="New password"
            android:layout_below="@+id/EditText_Pwd1"
            android:layout_margin="10dp"
            android:inputType="textPassword" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/TextView_PwdProblem"
            android:layout_below="@+id/EditText_Pwd2"
            android:textStyle="bold"
            android:gravity="center" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_custom_button"
            android:layout_below="@+id/TextView_PwdProblem"
            android:layout_alignParentRight="true"
            android:id="@+id/savePass"
            android:text="Save"/>
</RelativeLayout>