<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lakhvir.theawkwardeater.SubmitReviewActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:id="@+id/reviewingHeader"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="You are reviewing"/>

    <TextView android:id="@+id/reviewDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/reviewingHeader"
        android:singleLine="true"/>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:id="@+id/newReviewHeading"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/reviewDetails"
        android:text="Enter your review here:"/>

    <EditText android:id="@+id/reviewText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/newReviewHeading"/>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:id="@+id/newRatingHeading"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/reviewText"
        android:text="Enter your rating here:"/>

    <RatingBar
        android:id="@+id/recipeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newRatingHeading"
        android:layout_marginLeft="5dp"
        android:numStars="5"
        android:stepSize="1.0" />

    </RelativeLayout>

</ScrollView>
